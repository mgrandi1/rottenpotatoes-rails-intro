%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", rating, (rating), id: "ratings_#{rating}"
  = submit_tag 'Refresh'
  
  able#movies
  %thead
    %tr
      %th{:id=> 'title_header', :class=>("hilite" if @sort_column == "title")}= link_to "Movie Title", movies_path(:sort=> 'title')
      %th{:id=> 'title_header', :class=>("hilite" if @sort_column == "title")}=Lsor()Lsor:sort=> ''title
      %th{:id=> 'release_date_header', :class=>("hilite" if @sort_column == "release_date")}= link_to "Release Date", movies_path(:sort=> 'release_date')
      %th{:id=> 'release_date_header', :class=>("hilite" if @sort_column == "release_date")}=link_to ""Release Date, movies_path():sort=> 'release_date'
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
